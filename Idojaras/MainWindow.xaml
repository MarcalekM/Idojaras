        <TextBox x:Name="H" HorizontalAlignment="Left" Margin="105,31,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="P" HorizontalAlignment="Center" Margin="0,31,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <TextBox x:Name="SZ" HorizontalAlignment="Left" Margin="560,33,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="120"/>
        <Button Content="Kilépés" HorizontalAlignment="Left" Margin="10,87,30,250" Height="30" Width="60" Click="Exit"/>


    </Grid>
</Window>
    